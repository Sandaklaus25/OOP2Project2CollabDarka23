<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<VBox spacing="10.0" xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.storageinventory.controller.SupplierListController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Списък с Доставчици">
        <font>
            <Font name="System Bold" size="20.0"/>
        </font>
    </Label>

    <TableView fx:id="supplierTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="50.0"/>
            <TableColumn fx:id="colName" text="Фирма" prefWidth="200.0"/>
            <TableColumn fx:id="colVat" text="ЕИК" prefWidth="100.0"/>
            <TableColumn fx:id="colAddress" text="Адрес" prefWidth="200.0"/>
            <TableColumn fx:id="colPhone" text="Телефон" prefWidth="120.0"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>

    <HBox spacing="10.0" alignment="CENTER_RIGHT">
        <Button text="Нов доставчик" onAction="#onAddSupplier"
                style="-fx-background-color: #28a745; -fx-text-fill: white;"/>

        <Button text="Изтрий избран" onAction="#onDeleteSupplier"
                style="-fx-background-color: #dc3545; -fx-text-fill: white;"/>

        <Button text="Редактирай избран" onAction="#onEditSupplier"
                style="-fx-background-color: #dc3545; -fx-text-fill: white;"/>
    </HBox>

</VBox>