<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.SeparatorMenuItem?>
<BorderPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.storageinventory.controller.MainMenuController"
            fx:id="mainBorderPane">



    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu fx:id="adminMenu" text="Администрация">
                    <MenuItem text="Добави нов потребител" onAction="#onRegisterUser"/>
                </Menu>
                <Menu text="Система">
                    <items>
                        <MenuItem text="Начало (Табло)" onAction="#onShowHome"/>
                        <MenuItem text="Изход" onAction="#onLogout"/>
                    </items>
                </Menu>
                <Menu text="Номенклатури">
                    <items>
                        <MenuItem text="Стоки" onAction="#onShowProducts"/>
                        <MenuItem text="Клиенти" onAction="#onShowClients"/>
                        <MenuItem text="Доставчици" onAction="#onShowSuppliers"/>
                    </items>
                </Menu>
                <Menu text="Операции">
                    <MenuItem text="Доставка" onAction="#onShowDeliveries"/>
                    <MenuItem text="Продажба" onAction="#onShowSales"/>
                </Menu>
                <Menu text="Справки">
                    <MenuItem text="Доставки и доставчици" onAction="#onReportDeliveries"/>

                    <MenuItem text="Продажби и клиенти" onAction="#onReportSales"/>

                    <SeparatorMenuItem />

                    <MenuItem text="Наличности в склада" onAction="#onReportInventory"/>

                    <MenuItem text="Приходи, Разходи, Печалба" onAction="#onReportFinancial"/>

                    <SeparatorMenuItem />

                    <MenuItem text="Движение на касата" onAction="#onReportCash"/>

                    <MenuItem text="Дейност на оператори" onAction="#onReportOperators"/>
                </Menu>
            </menus>
        </MenuBar>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="20.0" fx:id="dashboardView">
            <Label fx:id="welcomeLabel" text="Добре дошли в Складовата Система">
                <font>
                    <Font name="System Bold" size="28.0" />
                </font>
            </Label>
            <Label fx:id="roleLabel" text="Роля: ..." textFill="#666666">
                <font>
                    <Font size="16.0" />
                </font>
            </Label>

            <Region prefHeight="30.0" />

            <VBox maxWidth="600.0" spacing="5.0" alignment="CENTER_LEFT">

                <Label text="Статус на системата:" textFill="#555555">
                    <font>
                        <Font name="System Bold" size="14.0"/>
                    </font>
                </Label>

                <ListView fx:id="notificationList" prefHeight="150.0"
                          style="-fx-background-color: white; -fx-border-color: #cccccc; -fx-background-radius: 5; -fx-border-radius: 5;"/>

                <Button text="Обнови статус" onAction="#refreshNotifications"
                        style="-fx-background-color: transparent; -fx-text-fill: #007bff; -fx-cursor: hand;"/>
            </VBox>
        </VBox>
    </center>

    <bottom>
        <HBox style="-fx-background-color: #ddd; -fx-padding: 5;">
            <Label text="Налични средства в касата: " style="-fx-font-weight: bold;"/>
            <Label fx:id="balanceLabel" text="--- лв." textFill="#007bff" style="-fx-font-weight: bold;"/>
        </HBox>
    </bottom>

</BorderPane>