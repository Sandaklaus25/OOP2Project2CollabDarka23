<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.layout.HBox?>
<BorderPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.storageinventory.controller.MainMenuController"
            fx:id="mainBorderPane">

    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu text="Номенклатури">
                    <items>
                        <MenuItem text="Стоки" onAction="#onShowProducts"/>
                        <MenuItem text="Клиенти" />
                        <MenuItem text="Доставчици" onAction="#onShowSuppliers"/>
                    </items>
                </Menu>
                <Menu text="Операции">
                    <MenuItem text="Доставка (Вход)" onAction="#onShowDeliveries"/>
                </Menu>
                <Menu text="Склад">
                    <items>
                        <MenuItem text="Приемане на стока" />
                        <MenuItem text="Изписване на стока" />
                        <MenuItem text="Справка наличности" />
                    </items>
                </Menu>
                <Menu text="Система">
                    <items>
                        <MenuItem text="Изход" onAction="#onLogout"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="20.0">
            <Label fx:id="welcomeLabel" text="Добре дошли в Складовата Система">
                <font>
                    <Font name="System Bold" size="28.0" />
                </font>
            </Label>
            <Label fx:id="roleLabel" text="Роля: ..." textFill="#666666">
                <font>
                    <Font size="16.0" />
                </font>
            </Label>
        </VBox>
    </center>

    <bottom>
        <HBox style="-fx-background-color: #ddd; -fx-padding: 5;">
            <Label text="Налични средства в касата: " style="-fx-font-weight: bold;"/>
            <Label fx:id="balanceLabel" text="--- лв." textFill="#007bff" style="-fx-font-weight: bold;"/>
        </HBox>
    </bottom>

</BorderPane>