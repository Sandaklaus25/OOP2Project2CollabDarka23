<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox spacing="15.0" xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.storageinventory.controller.ProductAddController"
      prefWidth="400.0">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Добавяне на Нова Стока">
        <font>
            <Font name="System Bold" size="18.0"/>
        </font>
    </Label>

    <GridPane hgap="10.0" vgap="10.0">
        <Label text="Наименование:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="nameField" promptText="напр. Клавиатура" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Доставна цена (лв):" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="priceInField" promptText="0.00" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Продажна цена (лв):" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="priceOutField" promptText="0.00" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Критичен минимум:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="criticalMinField" promptText="напр. 5" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    </GridPane>

    <Label fx:id="errorLabel" textFill="RED" visible="false" wrapText="true"/>

    <HBox spacing="10.0" alignment="CENTER_RIGHT">
        <Button text="Отказ" onAction="#onCancel" cancelButton="true"/>
        <Button text="Запази" onAction="#onSave" defaultButton="true"
                style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold;"/>
    </HBox>
</VBox>