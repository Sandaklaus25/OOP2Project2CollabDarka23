<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox spacing="15.0" xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.storageinventory.controller.RegisterUserController"
      prefWidth="400.0">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Регистрация на нов потребител">
        <font>
            <Font name="System Bold" size="18.0"/>
        </font>
    </Label>

    <GridPane hgap="10.0" vgap="10.0">
        <Label text="Потребителско име:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="usernameField" promptText="напр. ivan.ivanov" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Парола:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <PasswordField fx:id="passwordField" promptText="*****" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Роля:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <ComboBox fx:id="roleCombo" promptText="Избери роля..."
                  prefWidth="200.0" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Пълно име:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="fullNameField" promptText="Иван Иванов" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Email:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="emailField" promptText="email@example.com" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
    </GridPane>

    <Label fx:id="errorLabel" textFill="RED" visible="false" wrapText="true"/>

    <HBox spacing="10.0" alignment="CENTER_RIGHT">
        <Button text="Отказ" onAction="#onCancel" cancelButton="true"/>
        <Button text="Създай" onAction="#onSave" defaultButton="true"
                style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold;"/>
    </HBox>
</VBox>