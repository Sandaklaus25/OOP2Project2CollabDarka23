<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="15.0" xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.storageinventory.controller.SaleAddController"
      prefWidth="450.0">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Нова Продажба">
        <font>
            <Font name="System Bold" size="18.0"/>
        </font>
    </Label>

    <GridPane hgap="10.0" vgap="10.0">
        <Label text="Клиент:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <ComboBox fx:id="clientCombo" promptText="Избери клиент..."
                  prefWidth="250.0" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Стока:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <ComboBox fx:id="productCombo" promptText="Избери стока..."
                  prefWidth="250.0" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Документ №:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="docField" promptText="Фактура / Бон"
                   GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Количество:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="quantityField" promptText="напр. 1"
                   GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    </GridPane>

    <Label fx:id="errorLabel" textFill="RED" visible="false" wrapText="true"/>

    <HBox spacing="10.0" alignment="CENTER_RIGHT">
        <Button text="Отказ" onAction="#onCancel" cancelButton="true"/>
        <Button text="ПРОДАЙ" onAction="#onSave" defaultButton="true"
                style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold;"/>
    </HBox>
</VBox>